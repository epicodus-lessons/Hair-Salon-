{{ include('base.html.twig') }}

<body>
    <div class="container">
        <h1>List of clients</h1>
        {% if clients is not empty %}
            <ul>
                {% for client in clients %}
                <li><a href="/client/{{client.getId}}">{{client.getName}}</a></li>
                {% endfor %}
            </ul>
            {% else %}
            <p>There are no clients yet.</p>
        {% endif%}

        <form action="/stylist" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control" id="name" required>
            </div>
            <div class="form-group">
                <label for="telephone">Telephone</label>
                <input type="number" name="telephone" class="form-control" id="telephone" required>
            </div>

            <button type="submit" class="btn btn-lg btn-success" name="button">Add Client</button>
        </form>

        <form action="/deleteAll" method="post">
            <button type="submit" name="button" class="btn btn-md btn-danger">Delete All</button>
        </form>

        <a href="/">Home</a>

    </div>
</body>
