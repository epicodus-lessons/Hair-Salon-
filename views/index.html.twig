{{ include('base.html.twig') }}

<body>
    <div class="container">
        <h1>List of stylists</h1>
        {% if stylists is not empty %}
            <ul>
                {% for stylist in stylists %}
                <li><a href="/stylist/{{stylist.getId}}">{{stylist.getName}}</a></li>
                {% endfor %}
            </ul>
            {% else %}
            <p>There are no stylists yet.</p>
        {% endif%}

        <form action="/" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input  type="text" name="name" class="form-control" id="name" required="">
            </div>
            <div class="form-group">
                <label for="telephone">Telephone</label>
                <input type="number" name="telephone" class="form-control" id="telephone" required="">
            </div>
            <div class="form-group">
                <label for="availability">Availability</label>
                <input type="text" name="availability" class="form-control" id="availability" required>
            </div>

            <button type="submit" class="btn btn-lg btn-success" name="button">Add Stylist</button>
        </form>

        <form action="/delete" method="post">
            <button type="submit" name="button" class="btn btn-md btn-danger">Delete All ⚠️</button>
        </form>

    </div>
</body>
