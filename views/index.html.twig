{{ include('base.html.twig') }}

<body>
    <div class="container">
        <h1>List of stylists</h1>
        {% if stylists is not empty %}
            <ul>
                {% for stylist in stylists %}
                <li><a href="/stylist/{{stylist.getId}}">{{stylist.getName}}</a></li>
                {% endfor %}
            </ul>
        {% else %}
        <p>There are no stylists yet.</p>
        {% endif%}

        <form action="/" method="post">
            <div class="form-group">
                <label for="name">Name</label>
                <input type="text" name="name" class="form-control">
            </div>
            <div class="form-group">
                <label for="telephone">Telephone</label>
                <input type="text" name="telephone" class="form-control">
            </div>
            <div class="form-group">
                <label for="avaibility">Avaibility</label>
                <input type="text" name="avaibility" class="form-control">
            </div>

            <button type="submit" class="btn btn-lg btn-success" name="button">Add Stylist</button>
        </form>

    </div>
</body>
